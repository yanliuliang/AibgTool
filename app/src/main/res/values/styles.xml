<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/purple_200</item>
        <item name="colorAccent">@color/purple_200</item>
    </style>

    <style name="Widget.MyApplication.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.MyApplication.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 设置 AppBarLayout 的 Overlay 样式 -->
        <item name="android:textColorPrimaryInverse">@color/purple_200</item>
        <item name="android:textColorSecondaryInverse">@color/purple_500</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- 设置弹出菜单的 Overlay 样式 -->
        <item name="android:colorBackground">@color/teal_200</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>
</resources>